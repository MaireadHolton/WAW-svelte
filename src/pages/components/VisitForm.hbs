<form class="box" action="/list/{{list._id}}/addvisit" method="POST">
  <label>Enter visit Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter Visit" name="location">
      </div>
      <div class="field">
        <input class="input" type="number" step="0.01" placeholder="Enter Latitude" name="latitude">
      </div>
      <div class="field">
        <input class="input" type="number" step="0.01" placeholder="Enter Longitude" name="longitude">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter date visited" name="date">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter details of visit" name="details">
      </div>
      <div class="field">
       <div class="select">
        <select name="county">
         {{#each counties }}
           <option> {{nameEng}},{{nameIrish}}</option>
         {{/each}}
        </select>
       </div>
     </div>
    </div>
  </div>
  <div class="field">
    <div class="control">
     <button class="button is-primary">Add visit</button>
    </div>
  </div>
</form>
